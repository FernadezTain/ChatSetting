// api/saveSettings.js
import { randomUUID } from "crypto";

let db = {}; // Временное хранилище (перезапускается при cold start, для постоянного хранение подключай DB)

export default async function handler(req, res) {
    if (req.method !== 'POST') {
        return res.status(405).json({ error: "Only POST allowed" });
    }

    const settings = req.body;
    if (!settings) return res.status(400).json({ error: "No settings" });

    const token = randomUUID().slice(0, 8); // короткий токен
    db[token] = settings;

    return res.status(200).json({ token });
}

// Дополнительно: функция для получения настроек по токену
export async function getSettings(token) {
    return db[token] || null;
}
